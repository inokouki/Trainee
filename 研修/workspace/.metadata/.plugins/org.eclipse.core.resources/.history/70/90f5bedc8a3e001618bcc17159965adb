package tutorial.action;

import java.util.HashMap;

//import java.util.List;

import javax.annotation.Resource;
import javax.servlet.http.HttpServletRequest;

import org.seasar.extension.jdbc.JdbcManager;
//import org.seasar.framework.container.SingletonS2Container;
//import org.seasar.framework.container.factory.SingletonS2ContainerFactory;
import org.seasar.struts.annotation.ActionForm;
import org.seasar.struts.annotation.Execute;

//import tutorial.entity.Baridator;
import tutorial.form.BaridatorForm;



public class BaridatorAction {

    public JdbcManager jdbcManager;
    public String searchname = "lol";
    public String[] answer = new String[4];
    public String question1 = null, question2 = null, question3 = null, question4 = null;
    public String[] result = new String[4];
    public HttpServletRequest req;

    public HashMap<String, String> askmap = new HashMap<String, String>();

    @ActionForm
    @Resource
    BaridatorForm BaridatorForm;

    @Execute(validator = false)
    public String index() {
        BaridatorForm.initialized();
        return "index.jsp";
    }

    @Execute(validator = false)
    public String question() {
        return "ask0.jsp";
    }

    @Execute(validator = false)
    public String woman() {
        answer[0] = "woman";
        BaridatorForm.answerform[0] = "woman";
        question1 = "woman";
        askmap.put("question1", "woman");
        req.setAttribute("question1", "woman");
        return "ask1.jsp";
    }

    @Execute(validator = false)
    public String man() {
        answer[0] = "man";
        BaridatorForm.answerform[0] = "man";
        question1 = "man";
        askmap.put("question1", "man");
        req.setAttribute("question1", "man");
        return "ask1.jsp";
    }

    @Execute(validator = false)
    public String glass() {
        answer[1] = "glass";
        BaridatorForm.answerform[1] = "glass";
        question2 = "glass";
        askmap.put("question2", "glass");
        req.setAttribute("question2", "glass");
        return "ask2.jsp";
    }

    @Execute(validator = false)
    public String noglass() {
        answer[1] = "noglass";
        BaridatorForm.answerform[1] = "noglass";
        question2 = "noglass";
        askmap.put("question2", "noglass");
        req.setAttribute("question2", "noglass");
        return "ask2.jsp";
    }

    @Execute(validator = false)
    public String freshman() {
        answer[2] = "freshman";
        BaridatorForm.answerform[2] = "freshman";
        question3 = "freshman";
        askmap.put("question3", "freshman");
        req.setAttribute("question3", "freshman");
        return "ask3.jsp";
    }

    @Execute(validator = false)
    public String staff() {
        answer[2] = "staff";
        BaridatorForm.answerform[2] = "staff";
        question3 = "staff";
        askmap.put("question3", "staff");
        req.setAttribute("question3", "staff");
        return "ask3.jsp";
    }

    @Execute(validator = false)
    public String testyes() {
        answer[3] = "yes";
        BaridatorForm.answerform[3] = "yes";
        question4 = "yes";
        askmap.put("question4", "yes");
        req.setAttribute("question4", "yes");
        getUser();

        result[0] = question1;
        result[1] = question2;
        result[2] = question3;
        result[3] = question4;

        return "result.jsp";
    }

    @Execute(validator = false)
    public String testno() {
        answer[3] = "no";
        BaridatorForm.answerform[3] = "no";
        question4 = "no";
        askmap.put("question4", "no");
        req.setAttribute("question4", "no");
        getUser();

        result[0] = question1;
        result[1] = question2;
        result[2] = question3;
        result[3] = question4;

        return "result.jsp";
    }

    public void getUser() {

        searchname = "hahaha";

        if (answer[0] == "man") {

            if (answer[1] == "glass") {

                if (answer[2] == "staff") {

                    if (answer[3] == "yes") {
                        searchname = "山田さん";}
                    if (answer[3] == "no") {
                        searchname = "村上さん";}
                }

                if (answer[2] == "freshman") {

                    if (answer[3] == "yes") {
                        searchname = "man&glass&freshman&yes";}
                    if (answer[3] == "no") {
                        searchname = "man&glass&freshman&no";}
                }

            }

            if (answer[1] == "noglass") {

                if (answer[2] == "staff") {

                    if (answer[3] == "yes") {
                        searchname = "村田さん";}
                    if (answer[3] == "no") {
                        searchname = "飯塚さん";}
                }

                if (answer[2] == "freshman") {

                    if (answer[3] == "yes") {
                        searchname = "man&noglass&freshman&yes";}
                    if (answer[3] == "no") {
                        searchname = "man&noglass&freshman&no";}
                }
            }

        }

        if (answer[0] == "woman") {

            if (answer[1] == "glass") {

                if (answer[2] == "staff") {

                    if (answer[3] == "yes") {
                        searchname = "woman&glass&staff&yes";}
                    if (answer[3] == "no") {
                        searchname = "woman&glass&staff&no";}
                }

                if (answer[2] == "freshman") {

                    if (answer[3] == "yes") {
                        searchname = "woman&glass&freshman&yes";}
                    if (answer[3] == "no") {
                        searchname = "woman&glass&freshman&no";}
                }

            }

            if (answer[2] == "noglass") {

                if (answer[2] == "staff") {

                    if (answer[3] == "yes") {
                        searchname = "woman&noglass&staff&yes";}
                    if (answer[3] == "no") {
                        searchname = "woman&noglass&staff&no";}
                }

                if (answer[2] == "freshman") {

                    if (answer[3] == "yes") {
                        searchname = "woman&noglass&freshman&yes";}
                    if (answer[3] == "no") {
                        searchname = "woman&noglass&freshman&no";}
                }
            }

        }

    }

}